{
  "name": "secure-data-compiler",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev": "electron .",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/crypto-js": "^4.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "fabric": "^6.7.1",
    "formula-parser": "^2.0.1",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-data-grid": "^7.0.0-beta.57",
    "react-dom": "19.1.0",
    "react-resizable-panels": "^3.0.5",
    "slate": "^0.118.1",
    "slate-history": "^0.113.1",
    "slate-react": "^0.117.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^12.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/fabric": "^5.3.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.coparentpro.sdc",
    "productName": "Secure Data Compiler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.ico",
      "publisherName": "CoParentPro",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SDC",
      "uninstallDisplayName": "Secure Data Compiler",
      "license": "LICENSE.txt",
      "installerIcon": "public/assets/installer.ico",
      "uninstallerIcon": "public/assets/uninstaller.ico",
      "installerHeader": "public/assets/installer-header.bmp",
      "installerSidebar": "public/assets/installer-sidebar.bmp",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "menuCategory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/assets/icon.png",
      "category": "Office"
    }
  }
}
